<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Data</th>
      <th scope="col">Descrição</th>
      <th scope="col">Estabelecimento</th>
      <th scope="col">Valor</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% expenses.each.with_index(1) do |expense, index| %>
      <tr class="<%= 'alert alert-danger' if index == 1 %>">
        <td><%= index %></td>
        <td><%= expense.date.to_date.strftime("%d/%m/%Y") if expense.date.present? %></td>
        <td><%= expense.description %></td>
        <td><%= expense.establishment %></td>
        <td><%= number_to_currency(expense.value, unit: "R$ ", separator: ",", delimiter: "") %></td>
        <td><%= link_to 'Nota fiscal', expense.link_receipt, target: "_blank" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
